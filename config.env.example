# OpenShift AI Log Analyzer Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# REQUIRED: Groq AI Configuration
# ===========================================
GROQ_API_KEY=gsk_your_actual_groq_api_key_here
GROQ_ENDPOINT=https://api.groq.com/v1/chat/completions
USE_GROQ=true

# ===========================================
# OPTIONAL: Slack Notifications
# ===========================================
SLACK_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts

# ===========================================
# OPTIONAL: Email Notifications
# ===========================================
EMAIL_ALERTS_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_SENDER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_RECEIVER=admin@yourcompany.com

# ===========================================
# OPTIONAL: Webhook Notifications
# ===========================================
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
WEBHOOK_HEADERS={"Authorization": "Bearer your-token"}

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================
METRICS_SERVER=true
ANOMALY_THRESHOLD=3

